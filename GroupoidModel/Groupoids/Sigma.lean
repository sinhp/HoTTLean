    (B : ‚à´(A) ‚•§ Grpd.{v‚ÇÅ,u‚ÇÅ}) : Œì ‚•§ Grpd.{v‚ÇÅ,u‚ÇÅ} where
  -- NOTE using Grpd.of here instead of earlier speeds things up
  obj x := Grpd.of $ sigmaObj B x
  map := sigmaMap B
  map_id _ := sigmaMap_id
  map_comp _ _ := sigmaMap_comp

