  simp only [IsSplit.liftIso_comp, eqToHom_refl, liftIso_eqToHom, eqToHom_trans, Category.id_comp,
    Category.assoc]
  congr 1
  simp only [‚Üê heq_eq_eq, heq_comp_eqToHom_iff, comp_eqToHom_heq_iff]
  congr!
  simp

